{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RulesPath": "/app/rules",
  "LoggingEnabled": true,
  "AllowMultipleRules": true,
  "SystemEndpointStartSegment": "/sys",
  "DefaultLifeTimeInCache": "00:02:00",

  "RulesStorageMode": "git",

  "GitRepository": "https://github.com/mnkvsoft/lira.git",
  "GitBranch": "main",
  "GitRepositoryDirectory": "docs/examples",
  "GitPollingIntervalSeconds": 60
}
